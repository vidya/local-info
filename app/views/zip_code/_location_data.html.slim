
/p.clearfix
/  hr

ruby:
  map_link  = 'http://maps.googleapis.com/maps/api/staticmap?'
  map_link += "center=#{params[:latitude]},#{params[:longitude]}"
  map_link += '&zoom=12&size=400x400&sensor=false'

.location-div.clearfix
  .city-name-div= "#{params[:wiki_title]}"

  .location-value-label-div
    .location-label-div.clearfix
      = 'Latitude'
      br
      = 'Longitude'

    .location-value-div
      = params[:latitude]
      br
      = params[:longitude]

  /p.clearfix

  .wiki-link-div.clearfix
    /br
    = link_to "Wikipedia", "#{params[:wiki_entry]}", :target => '_blank', :class => 'info-link'

    /.location-info-links.clearfix
    /br
    = link_to 'Map', "#{map_link}", :target => '_blank', :class => 'info-link'

