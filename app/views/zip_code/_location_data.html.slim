
ruby:
  map_link  = 'http://maps.googleapis.com/maps/api/staticmap?'      +
              "center=#{params[:latitude]},#{params[:longitude]}"   +
              '&zoom=12&size=400x400&sensor=false'

.neighbor-div.clearfix
  .neighbor-city-name= "#{params[:wiki_title]}"

  .location-value-label-div
    .location-label-div.clearfix
      |     Latitude
      br    Longitude

    .location-value-div
      =     params[:latitude]
      br=   params[:longitude]

  .neighbor-info-link.clearfix
    = link_to "Wikipedia", "#{params[:wiki_entry]}", :target => '_blank'

    = link_to 'Map', "#{map_link}", :target => '_blank'

    /= link_to_function 'New Map', "",  class: 'gmaps_link', id: 'new_map_link'
    = link_to_function 'New Map', "",  class: 'gmaps_link', id: "link-#{params[:city_state]}"

  .city-state-div id="div-#{params[:city_state]}"

  /#map_canvas
